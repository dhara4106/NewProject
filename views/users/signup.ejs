<% layout ("/layouts/boilerplates") %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <h5 class="mb-3 mt-3"> 
          SignUp for Outshine Travel
        </h5>
        <form method="POST" action="/signup" class="needs-validation" novalidate>

            <div class="mb-3">
              <label class="form-label" for="username"> 
                  Username
              </label>
              <input name="username" 
                 placeholder="enter your username..." 
                 type="text" 
                 class="form-control" 
                 required
              />
              <div class="valid-feedback">
                  Looks good
              </div>
              <div class="invalid-feedback">
                  Username is required
              </div>

            </div>
             
            <div class="mb-3">
              <label class="form-label" for="email"> 
                Email
              </label>
              <input name="email" 
               placeholder="enter your email address..." 
               type="email" 
               class="form-control" 
               required
              />
              <div class="valid-feedback">
                Looks good
              </div>
              <div class="invalid-feedback">
                Email address is required
              </div>
           </div>

          <div class="mb-3">
            <label class="form-label" for="password"> 
              Password
            </label>
            <input name="password" 
             placeholder="enter your password here..." 
             type="password" 
             class="form-control" 
             required
            />
            <div class="valid-feedback">
              Looks good
            </div>
            <div class="invalid-feedback">
              Password is required
            </div>
         </div>
         <button class="btn btn-success mt-3"> SignUp</button>

        </form>
    </div>
</div>